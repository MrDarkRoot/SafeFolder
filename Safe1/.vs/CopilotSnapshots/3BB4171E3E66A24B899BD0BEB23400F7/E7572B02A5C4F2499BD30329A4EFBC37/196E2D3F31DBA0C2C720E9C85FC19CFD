using Safe1.ViewModels;
using System;
using System.Windows.Controls;

namespace Safe1.Views
{
    public partial class CreateMasterPasswordView : UserControl
    {
        private readonly CreateMasterPasswordViewModel _vm;

        public CreateMasterPasswordView(CreateMasterPasswordViewModel vm)
        {
            InitializeComponent();
            _vm = vm;
            this.DataContext = _vm;
        }

        private async void OnCreateClicked(object sender, System.Windows.RoutedEventArgs e)
        {
            var pass = PasswordBox.Password;
            var confirm = ConfirmBox.Password;
            await _vm.CreateMasterPasswordAsync(pass, confirm);
        }
    }
}
