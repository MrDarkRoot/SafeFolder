<Window x:Class="Safe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Safe"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:viewmodels="clr-namespace:Safe.ViewModels"
        mc:Ignorable="d"
        Title="Safe Folder" Height="650" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="NavButton" TargetType="RadioButton">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderThickness="0" Padding="20,0">
                            <DockPanel>
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#353b48"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#353b48"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="#2f3640">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- App Title -->
            <TextBlock Text="Safe Folder" 
                     FontSize="24" 
                     Foreground="White"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Margin="20,0,0,0"/>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Row="1" Margin="0,20">
                <RadioButton Style="{StaticResource NavButton}" IsChecked="True">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FolderLock" 
                                                  Width="22" 
                                                  Height="22" 
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                        <TextBlock Text="Thư mục Bảo mật" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                
                <RadioButton Style="{StaticResource NavButton}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Cog" 
                                                  Width="22" 
                                                  Height="22" 
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                        <TextBlock Text="Cài đặt" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <!-- Logout Button -->
            <RadioButton Grid.Row="2" 
                        Style="{StaticResource NavButton}"
                        Command="{Binding LogoutCommand}"
                        Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Logout" 
                                              Width="22" 
                                              Height="22" 
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                    <TextBlock Text="Đăng xuất" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Column="1" Background="#f5f6fa">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Command="{Binding AddFolderCommand}"
                        Background="#2980b9"
                        Foreground="White"
                        Padding="15,8">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Plus" 
                                                  Width="16" 
                                                  Height="16"
                                                  Margin="0,0,5,0"/>
                        <TextBlock Text="Thêm Thư mục"/>
                    </StackPanel>
                </Button>

                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="4" 
                        Margin="20,0,0,0"
                        Width="300"
                        HorizontalAlignment="Right">
                    <Grid>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Padding="10"
                                 VerticalContentAlignment="Center"/>
                        <iconPacks:PackIconMaterial Kind="Magnify" 
                                                  Width="20" 
                                                  Height="20"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  Margin="0,0,10,0"
                                                  Foreground="#95a5a6"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Folders DataGrid -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding FolderList}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="White"
                      BorderThickness="0"
                      RowBackground="White"
                      AlternatingRowBackground="#f8f9fa"
                      GridLinesVisibility="None"
                      CanUserAddRows="False"
                      Margin="20,0,20,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên Thư mục" 
                                      Binding="{Binding Name}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Đường dẫn" 
                                      Binding="{Binding Path}" 
                                      Width="2*"/>
                    <DataGridTextColumn Header="Chế độ Bảo vệ" 
                                      Binding="{Binding ProtectionMode}" 
                                      Width="*"/>
                    <DataGridCheckBoxColumn Header="Trạng thái" 
                                          Binding="{Binding IsLocked}" 
                                          Width="*"/>
                    <DataGridTemplateColumn Header="Hành động" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Command="{Binding DataContext.EncryptCommand, 
                                            RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,5,0"
                                            Padding="8,4">
                                        <iconPacks:PackIconMaterial Kind="Lock"/>
                                    </Button>
                                    <Button Command="{Binding DataContext.AccessCommand, 
                                            RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,4">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
